<table>
  <tr>
    <th>Autor</th>
    <th>Cytat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fortunes.each do |fortune| %>
  <tr>
    <td><%= fortune.author %></td>
    <td><%= fortune.body %></td>
    <td><%= link_to 'Pokaż', fortune %></td>
    <td><%= link_to 'Edytuj', edit_fortune_path(fortune) %></td>
    <td><%= link_to 'Zniszcz', fortune, :confirm => t('helpers.data.sure'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Fortune', new_fortune_path %>
<div>
<%= paginate @fortunes %>
</div>
<div>
<%= form_tag fortunes_path, :method => :get, :id => "fortunes_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>